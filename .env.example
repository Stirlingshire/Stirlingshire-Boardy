# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/stirlingshire_boardy?schema=public"

# Application
PORT=3000
NODE_ENV=development

# BrokerCheck Sync (FREE - replaces $1700/month FINRA API)
# Uses the public FINRA BrokerCheck API at api.brokercheck.finra.org
STIRLINGSHIRE_FIRM_CRD=310576
STIRLINGSHIRE_FIRM_NAME=Stirlingshire
BROKERCHECK_SYNC_ENABLED=true

# Slack notifications
# Create an Incoming Webhook at: https://api.slack.com/apps → Your App → Incoming Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
SLACK_CHANNEL=#stirlingshire-boardy-hiring

# Internal notifications
NOTIFICATION_EMAIL=placements@stirlingshire.com

# Attribution window in months (how long after introduction a hire counts as placement)
ATTRIBUTION_WINDOW_MONTHS=12

# Microsoft 365 Calendar (Azure AD App Registration)
# Create app at: https://portal.azure.com → Azure Active Directory → App registrations
# Required API permissions: Calendars.ReadWrite (Application)
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
MICROSOFT_CALENDAR_USER_ID=

# Zoom (Server-to-Server OAuth App)
# Create app at: https://marketplace.zoom.us → Develop → Build App → Server-to-Server OAuth
# Required scopes: meeting:write:admin, user:read:admin
ZOOM_ACCOUNT_ID=
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_USER_ID=

# Calendly (Pro plan required for API access)
# Get your Personal Access Token at: https://calendly.com/integrations/api_webhooks
CALENDLY_API_TOKEN=

# Calendly Webhook Configuration
# Create webhook subscription at: https://calendly.com/integrations/api_webhooks
# The signing key is shown when you create a webhook subscription
# Webhook URL should be: https://your-domain.com/api/webhooks/calendly
CALENDLY_WEBHOOK_SIGNING_KEY=
